# Skill Hunt Backend Environment Variables
# Copy this file to .env and fill in your values

# Database - Supabase PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
SUPABASE_URL=postgresql://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:6543/postgres

# Optional: Supabase anon key (for future features like auth)
SUPABASE_ANON_KEY=

# CORS - Allowed frontend origins (comma-separated)
# Development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Production example:
# CORS_ORIGINS=https://skill-hunt.vercel.app,https://www.skill-hunt.com

# Application settings
DEBUG=true
CACHE_TTL_SECONDS=3600

# API settings
API_PREFIX=/api/v1
